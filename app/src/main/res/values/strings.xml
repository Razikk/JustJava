    <string name="order_summary_name">Just Java order for <xliff:g example="Paul" id="name">%s</xliff:g></string>

    <!-- Header text for the order summary -->
    <string name="order_summary_header">Order Summary</string>

    <!-- Hint in enter name field -->
    <string name="name">Name</string>

    <!-- Whipped Cream topping CheckBox -->
    <string name="whipped_cream">Whipped Cream</string>

    <!-- Chocolate topping CheckBox -->
    <string name="chocolate">Chocolate</string>

    <!-- Quantity text for the number of coffees ordered. -->
    <string name="quantity">Quantity</string>

    <!-- Text for the Order button -->
    <string name="order_button">Order</string>

    <!-- Word "Total" for the total price -->
    <string name="total">Total</string>

